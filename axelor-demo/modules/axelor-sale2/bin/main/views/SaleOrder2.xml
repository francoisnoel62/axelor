<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid name="sale2-order-grid" title="Orders2"
		model="com.axelor.sale2.db.SaleOrder2">
		<field name="customer" />
		<field name="dateOfOrder" />
		<field name="dateOfPrevInvoicing" />
		<field name="exTaxTotal" />
		<field name="inTaxTotal" />
	</grid>

	<form name="sale2-order-form" title="Orders2"
		model="com.axelor.sale2.db.SaleOrder2">
		<panel>
			<field name="customer" />
			<field name="dateOfOrder" />
			<field name="dateOfPrevInvoicing" />
			<field name="saleOrderLine2" colSpan="12" />
			<field name="exTaxTotal" />
			<field name="inTaxTotal" />
			<button name="calculate" title="Calculate" colSpan="3"
				onClick="action-record-sale-order-calculate-totals" />
		</panel>
	</form>
	
	<action-record
		name="action-record-sale-order-calculate-totals"
		model="com.axelor.sale.db.SaleOrder">
		<field name="exTaxTotal"
			expr="eval:saleOrderLine?.exSubTotal?.sum()" />
		<field name="inTaxTotal"
			expr="eval:saleOrderLine?.inSubTotal?.sum()" />
	</action-record>
	
	

</object-views>

